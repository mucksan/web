<script>
const toolData = {
    copilot: {
        name: 'GitHub Copilot',
        description: '世界で最も普及しているAIペアプログラマー。IDE内でシームレスに動作し、コード補完からチャット、そして「Workspace」によるタスクベースの自律的な開発支援まで、多層的な機能を提供します。',
        features: ['操縦可能な自律性（計画の編集）', 'GitHubエコシステムとの深い統合', 'エンタープライズ向けの強力なセキュリティ'],
        stats: { 'インターフェース': 'IDE / Web', '能力レベル': '中〜高', '価格/月': '$10~' },
        chartData: {
            labels: ['自律性', '制御性', '文脈理解', 'IDE統合'],
            values: [7, 9, 7, 10]
        }
    },
    devin: {
        name: 'Cognition Devin',
        description: '「世界初の完全自律型AIソフトウェアエンジニア」として登場。独自のサンドボックス環境で、計画から実装、デバッグまでをエンドツーエンドで完遂することを目指します。',
        features: ['エンドツーエンドのタスク自動化', '自己デバッグ・自己修正能力', 'SWE-benchで証明された高い性能'],
        stats: { 'インターフェース': 'Web', '能力レベル': '高', '価格/月': '従量課金' },
        chartData: {
            labels: ['自律性', '制御性', '文脈理解', 'IDE統合'],
            values: [10, 3, 6, 2]
        }
    },
    cursor: {
        name: 'Cursor',
        description: 'AI機能を中核に据えて設計されたVS CodeベースのIDE。プロジェクト全体のコードベースをインデックス化し、深い文脈理解に基づいたリファクタリングやコード生成を得意とします。',
        features: ['コードベース全体の文脈理解', '大規模リファクタリング支援', '複数AIモデルの切り替え可能'],
        stats: { 'インターフェース': 'IDE', '能力レベル': '中', '価格/月': '$20~' },
        chartData: {
            labels: ['自律性', '制御性', '文脈理解', 'IDE統合'],
            values: [5, 6, 10, 9]
        }
    },
    kiro: {
        name: 'AWS Kiro (Amazon Q)',
        description: '「仕様駆動開発」を思想の中核に置く、エンタープライズ向けのAIエージェント。コーディングの前に要件定義書や設計書を生成し、コードとドキュメントの一貫性を保ちます。',
        features: ['仕様駆動開発アプローチ', '要件定義書・設計書の自動生成', 'AWSのセキュリティ・エコシステムと統合'],
        stats: { 'インターフェース': 'IDE', '能力レベル': '中〜高', '価格/月': '$19~' },
        chartData: {
            labels: ['自律性', '制御性', '文脈理解', 'IDE統合'],
            values: [7, 10, 6, 8]
        }
    },
    cli: {
        name: 'CLI Agents (Gemini/Claude)',
        description: 'ターミナルから直接AIの能力を呼び出す、パワーユーザー向けのツール群。スクリプト化やローカルシステムとの連携に優れ、複雑なワークフローの自動化を可能にします。',
        features: ['ターミナル内で完結するワークフロー', 'ローカルファイル・コマンドとの連携', '高いスクリプト性と柔軟性'],
        stats: { 'インターフェース': 'CLI', '能力レベル': '中', '価格/月': '様々' },
        chartData: {
            labels: ['自律性', '制御性', '文脈理解', 'IDE統合'],
            values: [6, 4, 5, 1]
        }
    }
};

const sdlcData = [
    { name: '計画・要件定義', tools: ['kiro', 'copilot'] },
    { name: 'アーキテクチャ・設計', tools: ['kiro', 'cursor'] },
    { name: 'コーディング・実装', tools: ['copilot', 'cursor', 'devin'] },
    { name: 'テスト・デバッグ', tools: ['devin', 'cursor', 'cli'] },
    { name: 'ドキュメント・保守', tools: ['kiro', 'cursor'] }
];

let toolChart;

document.addEventListener('DOMContentLoaded', () => {
    const toolTabsContainer = document.getElementById('tool-tabs');
    const toolDescriptionEl = document.getElementById('tool-description');
    const toolChartCanvas = document.getElementById('tool-chart').getContext('2d');

    function updateToolContent(toolKey) {
        const data = toolData[toolKey];
        
        let featuresHtml = data.features.map(feature => `<li class="flex items-start"><span class="text-green-500 mr-2 mt-1">✓</span><span>${feature}</span></li>`).join('');
        let statsHtml = Object.entries(data.stats).map(([key, value]) => `<div class="text-sm"><span class="font-semibold text-gray-500">${key}:</span> <span class="font-bold">${value}</span></div>`).join('');

        toolDescriptionEl.innerHTML = `
            <h3 class="text-3xl font-bold mb-4 section-title">${data.name}</h3>
            <p class="text-gray-700 mb-6">${data.description}</p>
            <ul class="space-y-2 mb-6">${featuresHtml}</ul>
            <div class="flex flex-wrap gap-x-6 gap-y-2 p-4 bg-gray-50 rounded-lg">${statsHtml}</div>
        `;

        if (toolChart) {
            toolChart.destroy();
        }
        toolChart = new Chart(toolChartCanvas, {
            type: 'bar',
            data: {
                labels: data.chartData.labels,
                datasets: [{
                    label: '能力スコア',
                    data: data.chartData.values,
                    backgroundColor: 'rgba(74, 144, 226, 0.6)',
                    borderColor: 'rgba(74, 144, 226, 1)',
                    borderWidth: 1,
                    borderRadius: 4
                }]
            },
            options: {
                indexAxis: 'y',
                maintainAspectRatio: false,
                scales: {
                    x: {
                        beginAtZero: true,
                        max: 10,
                        grid: {
                            display: false
                        }
                    },
                    y: {
                         grid: {
                            color: '#E5E7EB'
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    tooltip: {
                        enabled: true,
                        backgroundColor: '#333333',
                        titleFont: { weight: 'bold' },
                        bodyFont: { size: 14 },
                        callbacks: {
                             title: function(tooltipItems) {
                                const item = tooltipItems[0];
                                let label = item.chart.data.labels[item.dataIndex];
                                return Array.isArray(label) ? label.join(' ') : label;
                            }
                        }
                    }
                }
            }
        });
    }

    toolTabsContainer.addEventListener('click', (e) => {
        if (e.target.tagName === 'BUTTON') {
            const toolKey = e.target.dataset.tool;
            
            // Update active tab
            toolTabsContainer.querySelector('.active').classList.remove('active');
            e.target.classList.add('active');

            updateToolContent(toolKey);
        }
    });

    updateToolContent('copilot');

    const sdlcContainer = document.getElementById('sdlc-container');
    sdlcData.forEach((item, index) => {
        const toolsHtml = item.tools.map(toolKey => `<span class="tool-tag text-xs font-semibold mr-2 mb-2 px-2 py-1 rounded-full bg-gray-200 text-gray-700" data-tool="${toolKey}">${toolData[toolKey].name}</span>`).join('');
        
        const element = document.createElement('div');
        element.className = 'sdlc-item flex items-start space-x-4 cursor-pointer p-2 rounded-lg hover:bg-gray-50';
        element.dataset.phase = index;
        element.innerHTML = `
            <div class="flex flex-col items-center mt-1">
                <div class="sdlc-dot w-6 h-6 rounded-full bg-gray-300 transition-all"></div>
                ${index < sdlcData.length - 1 ? '<div class="w-0.5 h-24 bg-gray-300"></div>' : ''}
            </div>
            <div>
                <h3 class="sdlc-title text-xl font-semibold text-gray-800 transition-colors">${item.name}</h3>
                <div class="mt-2 flex flex-wrap">${toolsHtml}</div>
            </div>
        `;
        sdlcContainer.appendChild(element);
    });

    sdlcContainer.addEventListener('click', (e) => {
        const item = e.target.closest('.sdlc-item');
        if (item) {
            document.querySelectorAll('.sdlc-item').forEach(el => el.classList.remove('active'));
            item.classList.add('active');
        }
    });
});
</script>
</body>
</html>
